<mx:String id="defaultCSS">
	<![CDATA[

body {    
  font-weight: normal;
  text-decoration: none; 
  color:#909090;
}

.emphasis {
  font-weight: normal; 
  text-decoration: none; 
  color:#404080;
}
.title {
  font-size: 18pt; 
  font-weight: bold; 
  text-decoration: none; 
  color:#8080A0;
}
a:link {
  font-weight: none; 
  text-decoration: underline; 
  color:#000080;
}
a:visited {
  font-weight: normal; 
  text-decoration: underline; 
  color:#800080;
}
a:active {
  font-weight: normal; 
  text-decoration: underline; 
  color:#000080;
}
a:hover {
  font-weight: normal; 
  text-decoration: underline; 
  color:#000080;
}
